                .col-sm-6
                  .form-group
                    label
                      | Email 
                      span.text-danger *
                    input.form-control(type='email')
                .col-sm-6
                  .form-group
                    label Password
                    input.form-control(type='password')
                .col-sm-6
                  .form-group
                    label Confirm Password
                    input.form-control(type='password')
                .col-sm-6
                  .form-group
                    label Date of Birth
                    .cal-icon
                      input.form-control.datetimepicker(type='text')
                .col-sm-6
                  .form-group.gender-select
                    label.gen-label Gender:
                    .form-check-inline
                      label.form-check-label
                        input.form-check-input(type='radio' name='gender')
                        | Male
                    .form-check-inline
                      label.form-check-label
                        input.form-check-input(type='radio' name='gender')
                        | Female
                .col-sm-12
                  .row
                    .col-sm-12
                      .form-group
                        label Address
                        input.form-control(type='text')
                    .col-sm-6.col-md-6.col-lg-3
                      .form-group
                        label Country
                        select.form-control.select
                          option USA
                          option United Kingdom
                    .col-sm-6.col-md-6.col-lg-3
                      .form-group
                        label City
                        input.form-control(type='text')
                    .col-sm-6.col-md-6.col-lg-3
                      .form-group
                        label State/Province
                        select.form-control.select
                          option California
                          option Alaska
                          option Alabama
                    .col-sm-6.col-md-6.col-lg-3
                      .form-group
                        label Postal Code
                        input.form-control(type='text')
                .col-sm-6
                  .form-group
                    label Phone 
                    input.form-control(type='text')
                .col-sm-6
                  .form-group
                    label Avatar
                    .profile-upload
                      .upload-img
                        img(alt='' src='assets/img/user.jpg')
                      .upload-input
                        input.form-control(type='file')
              .form-group
                label Short Biography
                textarea.form-control(rows='3' cols='30')
              .form-group
                label.display-block Status
                .form-check.form-check-inline
                  input#doctor_active.form-check-input(type='radio' name='status' value='option1' checked='')
                  label.form-check-label(for='doctor_active')
                    | Active
                .form-check.form-check-inline
                  input#doctor_inactive.form-check-input(type='radio' name='status' value='option2')
                  label.form-check-label(for='doctor_inactive')
                    | Inactive
              .m-t-20.text-center
                button.btn.btn-primary.submit-btn Create Doctor
