  .main-wrapper
    .page-wrapper
      .content
        .row
          .col-lg-8.offset-lg-2
            h4.page-title Add Doctor
        .row
          .col-lg-8.offset-lg-2
            form
              .row
                .col-sm-6
                  .form-group
                    label
                      | First Name 
                      span.text-danger *
                    input.form-control(type='text')
                .col-sm-6
                  .form-group
                    label Last Name
                    input.form-control(type='text')
                .col-sm-6
